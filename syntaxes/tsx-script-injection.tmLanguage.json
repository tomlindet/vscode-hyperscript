{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "scopeName": "source.hyperscript-script-tsx.injection",
    "injectionSelector": "R:string.template.tsx, meta.embedded.expression.tsx, source.tsx",
    "patterns": [
        {
            "begin": "(?<=(?i:type)\\s*=\\s*(\"|'|)text.hyperscript(\"|'|).*>)",
            "end": "(?=</script)",
            "name": "meta.embedded.block._hyperscript",
            "patterns": [
                {
                    "include": "source._hyperscript"
                }
            ]
        }
    ]
}